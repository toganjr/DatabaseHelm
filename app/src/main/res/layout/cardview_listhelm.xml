<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:id="@+id/CardViewHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="@color/darkwhite"
        android:layoutAnimation="@anim/layout_animation"
        >

        <TextView
            android:id="@+id/TV_listnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/realblack"
            android:layout_toLeftOf="@id/TV_textliststock"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/TV_listharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 10.000"
            android:layout_toRightOf="@id/TV_textListharga"
            android:layout_below="@id/TV_listnama"
            android:textColor="@color/realblack"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/TV_textListharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga :"
            android:layout_below="@id/TV_listnama"
            android:layout_marginRight="9dp"
            android:layout_marginTop="4dp"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/TV_liststock"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_textliststock"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/realblack"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/TV_textliststock"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:layout_alignParentRight="true"
            android:textSize="10dp"
            android:gravity="center"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
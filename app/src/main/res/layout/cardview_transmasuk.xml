<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:id="@+id/CardViewHistory"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:paddingRight="10dp"
        android:background="@color/darkwhite"
        android:layout_gravity="center"
        android:layoutAnimation="@anim/layout_animation"
        >

        <ImageView
            android:id="@+id/imageup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_keyboard_arrow_down_green_24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barang Masuk"
            android:textSize="6dp"
            android:textColor="@color/downcolo"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/imageup1"
            />

        <TextView
            android:id="@+id/TV_transnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="18sp"
            android:textColor="@color/realblack"
            android:layout_toLeftOf="@id/TV_textTransjumlah"
            android:layout_toRightOf="@id/imageup1"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/TV_transharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 10.000"
            android:layout_toRightOf="@id/TV_textTransharga"
            android:layout_marginTop="2dp"
            android:layout_below="@id/TV_transnama"
            android:textColor="@color/realblack"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/TV_textTransharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga :"
            android:layout_below="@id/TV_transnama"
            android:layout_toRightOf="@id/imageup1"
            android:layout_marginRight="9dp"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/TV_transket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="PT. Indomaret Malang"
            android:layout_toRightOf="@id/imageup1"
            android:layout_toLeftOf="@id/TV_Transtanggal"
            android:layout_marginTop="2dp"
            android:layout_below="@id/TV_textTransharga"
            android:textColor="@color/realblack"
            android:textSize="12sp"
            />
<!--        <TextView-->
<!--            android:id="@+id/TV_textTranstanggal"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Tanggal :"-->
<!--            android:layout_below="@id/TV_textTransharga"-->
<!--            android:layout_marginRight="9dp"-->
<!--            android:layout_marginTop="4dp"-->
<!--            android:textSize="10dp"-->
<!--            android:textColor="@color/realblack"-->
<!--            />-->
        <TextView
            android:id="@+id/TV_Transtanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Januari 2021"
            android:layout_below="@id/TV_transharga"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/TV_transjumlah"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_above="@id/TV_Transtanggal"
            android:layout_alignParentRight="true"
            android:textColor="@color/realblack"
            android:textSize="18sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/TV_textTransjumlah"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TV_transjumlah"
            android:text="Total"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/realblack"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
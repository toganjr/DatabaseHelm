<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:id="@+id/CardViewHistory"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="@color/darkwhite"
        android:layout_gravity="center"
        android:layoutAnimation="@anim/layout_animation"
        >

        <ImageView
            android:id="@+id/imageup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_keyboard_arrow_up_pink_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barang Keluar"
            android:textSize="6dp"
            android:textColor="@color/upcolor"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/imageup1"
            />

        <TextView
            android:id="@+id/TV_transnamaout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/imageup1"
            android:textColor="@color/realblack"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/TV_transjumlahout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 buah"
            android:layout_toRightOf="@id/TV_textTransjumlahout"
            android:layout_below="@id/TV_transnamaout"
            android:textColor="@color/realblack"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/TV_textTransjumlahout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah :"
            android:layout_below="@id/TV_transnamaout"
            android:layout_toRightOf="@id/imageup1"
            android:layout_marginRight="9dp"
            android:layout_marginTop="4dp"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/TV_TransTanggalout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Januari 2021"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:textSize="10dp"
            />
